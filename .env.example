# AWS S3 Configuration
AWS_S3_BUCKET=github-api0-upload
AWS_REGION=us-east-2
# Enable S3 folder partitioning: yyyy/mm/dd/ structure (true/false)
S3_USE_DATE_PARTITIONING=true

# GitHub API Configuration (optional - leave empty for unauthenticated)
GITHUB_TOKEN=

# Extraction Settings
# MAX_REQUESTS_PER_RUN: Number of API requests allowed per run (60 for unauthenticated, 5000 for authenticated)
# Note: In production mode, 1 request is used for list, rest for details (e.g., 60 requests = 1 list + 59 details)
MAX_REQUESTS_PER_RUN=60

# Cache Settings
# Cache enables incremental page loading and prevents re-fetching already processed repositories
USE_CACHE=true
CACHE_DIR=cache

# Since Tracking - Resume from last position
# SINCE_STORAGE_METHOD options:
#   - 'file': Store in local text file (default, simplest)
#   - 'env': Read from environment variable LAST_REPO_ID (for containers)
#   - 's3': Store in S3 at github_extraction_state/last_repo_id.txt (for distributed systems)
#   - 'dynamo': Store in DynamoDB table (for production, requires DYNAMO_STATE_TABLE)
SINCE_STORAGE_METHOD=file
SINCE_FILE_PATH=last_repo_id.txt

# DynamoDB settings (only if SINCE_STORAGE_METHOD=dynamo)
# DYNAMO_STATE_TABLE=github_extraction_state

# Environment variable for 'env' storage method (only if SINCE_STORAGE_METHOD=env)
# LAST_REPO_ID=0

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
